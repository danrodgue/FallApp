<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/border"/>
            <stroke android:color="@color/primary" android:width="2dp"/>
            <corners android:radius="@dimen/radius_sm"/>
        </shape>
    </item>
    <!-- Estado deshabilitado -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/card_background"/>
            <stroke android:color="@color/text_muted" android:width="1dp"/>
            <corners android:radius="@dimen/radius_sm"/>
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape>
            <solid android:color="@color/card_background"/>
            <stroke android:color="@color/border" android:width="1.5dp"/>
            <corners android:radius="@dimen/radius_sm"/>
        </shape>
    </item>
</selector>

